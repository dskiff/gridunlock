{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext" /* esbuild transpiles */,
    "outDir": "out",
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true /* Report errors for fallthrough cases in switch statement. */,
    "noUnusedParameters": true,
    "useUnknownInCatchVariables": true,
    "jsx": "react-jsx"
  },
  "exclude": ["node_modules", ".vscode-test", "playground"]
}
